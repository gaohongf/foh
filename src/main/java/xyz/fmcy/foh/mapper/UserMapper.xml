<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.fmcy.foh.mapper.UserMapper">
    <insert id="addUser" parameterType="xyz.fmcy.foh.pojo.User" keyProperty="uid" useGeneratedKeys="true">
        insert into user(username, password) value (#{username}, #{password})
    </insert>
    <update id="updateUserNickname" parameterType="xyz.fmcy.foh.pojo.User">
        update user
        set nickname = #{nickname}
        where uid = #{uid}
           or username = #{username}
    </update>
    <select id="findUserByUid" resultType="xyz.fmcy.foh.pojo.User">
        select *
        from user
        where uid = #{uid}
    </select>
    <select id="findUserByUserName" resultType="xyz.fmcy.foh.pojo.User">
        select *
        from user
        where username = #{username}
    </select>

    <select id="userNumber" resultType="int">
        select count(uid)
        from user
    </select>

    <select id="findUserByLimit" resultType="xyz.fmcy.foh.pojo.User">
        select *
        from user
        order by uid limit #{start},#{number}
    </select>
</mapper>